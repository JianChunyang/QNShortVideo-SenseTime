<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/tv_face_attribute"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#00000000"
        android:text=""
        android:textSize="@dimen/layout_resolution_font_size"
        android:textColor="@color/white"
        android:padding="@dimen/layout_resolution_padding"/>

    <RelativeLayout
        android:id="@+id/tv_layout_tips"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="#00000000"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/iv_image_tips"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_text_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="20dp"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_base_beauty_options"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:gravity="center"
        android:background="#80000000"
        android:orientation="vertical"
        android:visibility="invisible"
        android:layout_alignParentBottom="true">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_beauty_base"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rv_filter_strength"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_above="@+id/rv_beauty_and_filter_options"
        android:clickable="true"
        android:visibility="invisible">

        <TextView
            android:layout_width="35dp"
            android:layout_height="34dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:text="0" />
        <SeekBar
            android:id="@+id/sb_filter_strength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:progressDrawable="@drawable/bg_seekbar_progressbar"
            android:thumb="@drawable/seekbar_thumb"/>
        <TextView
            android:id="@+id/tv_filter_strength"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:text="100"/>
    </RelativeLayout>

    <com.qiniu.pili.droid.shortvideo.demo.sensetime.view.IndicatorSeekBar
        android:visibility="invisible"
        android:id="@+id/beauty_item_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rv_beauty_and_filter_options">
    </com.qiniu.pili.droid.shortvideo.demo.sensetime.view.IndicatorSeekBar>

    <RelativeLayout
        android:id="@+id/rv_beauty_and_filter_options"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:layout_marginBottom="160dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_beauty_options"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:scrollbars="none"
            android:padding="2dp"
            android:background="#80000000"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#80ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_filter_icons"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#80000000"
        android:clickable="true"
        android:visibility="invisible"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="6dp"
            android:layout_height="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/filter_back"/>

        <ImageView
            android:id="@+id/iv_filter_group"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="58dp"
            android:src="@drawable/icon_scenery_selected"/>

        <TextView
            android:id="@+id/tv_filter_group"
            android:layout_width="32dp"
            android:layout_height="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="95dp"
            android:gravity="center_horizontal"
            android:textColor="#ffffff"
            android:text="风景"
            android:textSize="14dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_filter_icons"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:scrollbars="none"
            android:paddingTop="10dp"
            android:paddingBottom="20dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_filter_groups"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:gravity="center_horizontal"
        android:background="#80000000"
        android:orientation="horizontal"
        android:clickable="true"
        android:visibility="invisible"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/ll_filter_group_portrait"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_filter_group_portrait"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_portrait_unselected"/>
            <TextView
                android:id="@+id/tv_filter_group_portrait"
                android:layout_width="32dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:textColor="#ffffff"
                android:text="人像"
                android:textSize="14dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_filter_group_scenery"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_filter_group_scenery"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_scenery_unselected"/>
            <TextView
                android:id="@+id/tv_filter_group_scenery"
                android:layout_width="32dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:textColor="#ffffff"
                android:text="风景"
                android:textSize="14dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_filter_group_still_life"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_filter_group_still_life"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_still_life_unselected"/>
            <TextView
                android:id="@+id/tv_filter_group_still_life"
                android:layout_width="32dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:textColor="#ffffff"
                android:text="静物"
                android:textSize="14dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_filter_group_food"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_filter_group_food"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_food_unselected"/>
            <TextView
                android:id="@+id/tv_filter_group_food"
                android:layout_width="32dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:textColor="#ffffff"
                android:text="食物"
                android:textSize="14dp"/>
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:scrollbars="none"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:background="#80000000"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"/>

    <RelativeLayout
        android:id="@+id/rl_sticker_options"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#80000000"
        android:visibility="invisible"
        android:layout_above="@+id/rv_sticker_icons">
        <RelativeLayout
            android:id="@+id/rv_close_sticker"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true">
            <ImageView
                android:id="@+id/iv_close_sticker"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/close_sticker" />
        </RelativeLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/rv_close_sticker"
            android:background="#80ffffff" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_sticker_options"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:scrollbars="none"
            android:padding="2dp"
            android:layout_toRightOf="@+id/view_line"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#80ffffff" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_sticker_icons"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:scrollbars="none"
        android:padding="5dp"
        android:background="#80000000"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:id="@+id/ll_select_options"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:background="#00000000"
        android:orientation="horizontal"
        android:layout_above="@id/btns"
        android:clickable="true">

        <LinearLayout
            android:id="@+id/ll_sticker_options_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">
            <ImageView
                android:id="@+id/iv_sticker_options_switch"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:padding="4dp"
                android:src="@drawable/sticker"/>
            <TextView
                android:id="@+id/tv_sticker_options_switch"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="特效"
                android:textColor="#ffffff"
                android:textSize="11sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_blank_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_beauty_options_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2"
            android:clickable="true">
            <ImageView
                android:id="@+id/iv_beauty_options_switch"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:padding="4dp"
                android:src="@drawable/beauty"/>
            <TextView
                android:id="@+id/tv_beauty_options_switch"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="美颜"
                android:textColor="#ffffff"
                android:textSize="11dp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/reset"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="重置"
        android:layout_marginRight="27dp"
        android:layout_marginBottom="34dp"
        android:drawableLeft="@drawable/reset"
        android:drawablePadding="5dp"/>
</merge>